{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% extends "./layout.njk" %}

{% set pageTitle = 'Confirm details' %}
{% set formButtonText = "Confirm" %}

{% block beforeForm %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
    {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Supervising officer"
            },
            value: {
              text: form.supervisorOfficerCode
            }
          },
          {
            key: {
              text: "Attendance"
            },
            value: {
              text: form.contactOutcomeId
            }
          },
          {
            key: {
              text: "Start and end time"
            },
            value: {
              text: form.startTime
            }
          },
          {
            key: {
              text: "Penalty hours"
            },
            value: {
              text: form.attendanceData.penaltyTime
            }
          },
          {
            key: {
              text: "Compliance"
            },
            value: {
              html: form.attendanceData.hiVisWorn
            }
          }
        ]
      }) }}
    </div>
  </div>
{% endblock %}
