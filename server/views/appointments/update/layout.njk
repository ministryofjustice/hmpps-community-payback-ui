{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "../../showErrorSummary.njk" import showErrorSummary %}

{% extends "../../partials/layout.njk" %}

{% set mainClasses = "app-container govuk-body" %}
{% set formButtonText = "Continue" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}

{% block content %}
  {{ showErrorSummary(errorSummary) }}

  {% include "../_offenderDetails.njk" %}

  {% block formHeader %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-m">{{ pageTitle }}</h2>
      </div>
    </div>
  {% endblock %}

  {% block beforeForm %}{% endblock %}

  <form action="{{ updatePath }}" method="post">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    <input type="hidden" name="form" value="{{ form }}">
    {% block formContent %}
    {% endblock %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        {{ govukButton({
        text: formButtonText
        }) }}

      </div>
    </div>
  </form>
{% endblock %}
