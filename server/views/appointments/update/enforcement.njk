{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% extends "./layout.njk" %}

{% set pageTitle = 'Confirm enforcement' %}

{% block formContent %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <p>You have marked this appointment as a non-compliance.</p>
      <p><strong>This will be referred to the offender manager.</strong></p>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {{ govukDateInput({
        id: "respondBy",
        namePrefix: "respondBy",
        fieldset: {
          legend: {
            text: "Respond by",
            classes: "govuk-fieldset__legend--m"
          }
        },
        items: dateItems,
        errorMessage: errors['respondBy-day']
      }) }}
    </div>
  </div>
{% endblock %}